<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <property name="autoIncrement" value="true"/>

    <!--
        Added the entity Volunteer.
    -->
    <changeSet id="06-1-script" author="jhipster">
        <createTable tableName="volunteers">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_volunteers_email" />
            </column>
            <column name="phone" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_volunteers_phone" />
            </column>
            <column name="creation_date" type="date">
                <constraints nullable="false" />
            </column>
            <column name="municipality_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

        <createTable tableName="volunteers_services">
            <column name="service_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="volunteer_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="municipality_id"
                                 baseTableName="volunteers"
                                 constraintName="fk_volunteers_municipality_id"
                                 referencedColumnNames="id"
                                 referencedTableName="municipalities"/>

        <addPrimaryKey columnNames="volunteer_id, service_id" tableName="volunteers_services"/>

        <addForeignKeyConstraint baseColumnNames="volunteer_id"
                                 baseTableName="volunteers_services"
                                 constraintName="fk_volunteers_services_volunteers_id"
                                 referencedColumnNames="id"
                                 referencedTableName="volunteers"/>

        <addForeignKeyConstraint baseColumnNames="service_id"
                                 baseTableName="volunteers_services"
                                 constraintName="fk_volunteers_services_service_id"
                                 referencedColumnNames="id"
                                 referencedTableName="services"/>
    </changeSet>

    <!--
        Load sample data generated with Faker.js
        - This data can be easily edited using a CSV editor (or even MS Excel) and
          is located in the 'src/main/resources/config/liquibase/fake-data' directory
        - By default this data is applied when running with the JHipster 'dev' profile.
          This can be customized by adding or removing 'faker' in the 'spring.liquibase.contexts'
          Spring Boot configuration key.
    -->
    <changeSet id="06-1-data" author="jhipster" context="faker">
        <loadData
                  file="config/liquibase/fake-data/volunteers.csv"
                  separator=";"
                  tableName="volunteers">
            <column name="id" type="numeric"/>
            <column name="first_name" type="string"/>
            <column name="last_name" type="string"/>
            <column name="email" type="string"/>
            <column name="phone" type="string"/>
            <column name="creation_date" type="date"/>
            <column name="municipality_id" type="numeric"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here, do not remove-->
        </loadData>

        <loadData
            file="config/liquibase/fake-data/volunteers_services.csv"
            separator=";"
            tableName="volunteers_services">
            <column name="volunteer_id" type="numeric"/>
            <column name="service_id" type="numeric"/>
            <!-- jhipster-needle-liquibase-add-loadcolumn - JHipster (and/or extensions) can add load columns here, do not remove-->
        </loadData>
    </changeSet>

</databaseChangeLog>
